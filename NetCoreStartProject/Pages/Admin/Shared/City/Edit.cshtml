@model NetCoreStartProject.Pages.Admin.Shared.City.EditModel

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City.Code" class="control-label"></label>
                <input asp-for="City.Code" class="form-control" />
                <span asp-validation-for="City.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.Latitude" class="control-label"></label>
                <input asp-for="City.Latitude" class="form-control" />
                <span asp-validation-for="City.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.Longitude" class="control-label"></label>
                <input asp-for="City.Longitude" class="form-control" />
                <span asp-validation-for="City.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.FlagCode" class="control-label"></label>
                <input asp-for="City.FlagCode" class="form-control" />
                <span asp-validation-for="City.FlagCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.CountryId" class="control-label"></label>
                <select asp-for="City.CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="City.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.NameAr" class="control-label"></label>
                <input asp-for="City.NameAr" class="form-control" />
                <span asp-validation-for="City.NameAr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.NameEn" class="control-label"></label>
                <input asp-for="City.NameEn" class="form-control" />
                <span asp-validation-for="City.NameEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.DescriptionAr" class="control-label"></label>
                <input asp-for="City.DescriptionAr" class="form-control" />
                <span asp-validation-for="City.DescriptionAr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.DescriptionEn" class="control-label"></label>
                <input asp-for="City.DescriptionEn" class="form-control" />
                <span asp-validation-for="City.DescriptionEn" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="City.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="City.IsDeleted" /> @Html.DisplayNameFor(model => model.City.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="City.Slug" class="control-label"></label>
                <input asp-for="City.Slug" class="form-control" />
                <span asp-validation-for="City.Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
